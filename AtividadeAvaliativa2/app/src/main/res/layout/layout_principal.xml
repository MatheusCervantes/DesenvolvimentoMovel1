<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_app_imobiliaria"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_principal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Imobiliária"
        android:textSize="40sp"></TextView>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView android:text="Nome:"></TextView>

            <EditText
                android:id="@+id/nome"
                android:layout_width="200dp"
                android:layout_height="wrap_content"></EditText>
        </TableRow>

        <TableRow>

            <TextView android:text="Região:"></TextView>

            <EditText
                android:id="@+id/regiao"
                android:layout_width="200dp"
                android:layout_height="wrap_content"></EditText>
        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/btnenviar"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/seta"></ImageButton>

</LinearLayout>